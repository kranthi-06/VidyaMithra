{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/v1/:match*",
            "destination": "api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/$1"
        }
    ],
    "env": {
        "PYTHONPATH": "backend"
    }
}